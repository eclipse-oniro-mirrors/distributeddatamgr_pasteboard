import("//build/test.gni")
import("//foundation/distributeddatamgr/pasteboard/pasteboard.gni")

group("dialog_unittest") {
  testonly = true
  deps = [
    ":PasteboardDialogNormalTest",
    ":PasteboardDialogAbnormalTest",
  ]
}

ohos_unittest("PasteboardDialogNormalTest") {
  module_out_path = "pasteboard/pasteboard"
  sources = [
    "unit/pasteboard_dialog_normal_test.cpp",
  ]
  configs = [ "//foundation/distributeddatamgr/pasteboard/test/unittest:unittest_config" ]
  external_deps = [
    "ability_base:want",
    "ability_runtime:ability_manager",
    "googletest:gtest_main",
    "hilog:libhilog",
    "ipc:ipc_core",
  ]
  deps = [
    "${pasteboard_service_path}:pasteboard_service",
  ]
}

ohos_unittest("PasteboardDialogAbnormalTest") {
  module_out_path = "pasteboard/pasteboard"
  sources = [
    "unit/pasteboard_dialog_abnormal_test.cpp",
  ]
  configs = [ "//foundation/distributeddatamgr/pasteboard/test/unittest:unittest_config" ]
  external_deps = [
    "ability_base:want",
    "ability_runtime:ability_manager",
    "googletest:gtest_main",
    "hilog:libhilog",
    "ipc:ipc_core",
  ]
  deps = [
    "${pasteboard_service_path}:pasteboard_service",
  ]
}
