import("//build/test.gni")
import("//foundation/distributeddatamgr/pasteboard/pasteboard.gni")

group("zidl_unittest") {
  testonly = true
  deps = [
    ":PasteboardDelayGetterProxyTest",
    ":PasteboardDelayGetterStubTest",
    ":PasteboardEntryGetterProxyTest",
    ":PasteboardEntryGetterStubTest",
  ]
}

ohos_unittest("PasteboardDelayGetterProxyTest") {
  module_out_path = "pasteboard/pasteboard"
  defines = [
    "private = public",
    "protected = public",
  ]
  sources = [
    "unit/pasteboard_delay_getter_proxy_test.cpp",
    "mock/pasteboard_observer_callback_mock.cpp",
  ]
  configs = [ "//foundation/distributeddatamgr/pasteboard/test/unittest:unittest_config" ]
  external_deps = [
    "c_utils:utils",
    "ffrt:libffrt",
    "googletest:gmock",
    "googletest:gtest_main",
    "hilog:libhilog",
    "ipc:ipc_core",
    "udmf:udmf_client",
  ]
  deps = [
    "${pasteboard_framework_path}:pasteboard_framework",
    "${pasteboard_innerkits_path}:pasteboard_client",
    "${pasteboard_innerkits_path}:pasteboard_data",
    "${pasteboard_service_path}:pasteboard_service",
  ]
}

